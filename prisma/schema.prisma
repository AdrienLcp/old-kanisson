// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @unique
  pseudo            String        @unique
  email             String        @unique
  password          String
  admin             Boolean       @default(false)
  moderator         Boolean       @default(false)
  banned            Boolean       @default(false)
}

model Playlist {
  id                String        @id @unique
  user_id           String
  creator           String
  title             String        @unique
  description       String
  date              String
  ratings           Int[]
  ratings_ids       String[]
  nbOfPlayed        Int           @default(0)
  visible           Boolean       @default(true)
}

model Track {
  id                String        @id @unique
  playlist_id       String
  youtube_id        String
  youtube_title     String
  title             String
  artist            String
  img               String
  valid             Boolean       @default(false)
}

model Notification {
  id            String            @id @unique
  user_id       String
  title         String
  message       String
  date          String
  seen          Boolean           @default(false)
}

model Report {
  id              String          @id @unique
  user_id         String
  target_pseudo   String
  target_id       String
  message         String
  date            String
}

model Game {
  id                Int           @id @default(autoincrement())
  user_id           String
  playlist_id       String
  score             Int
  date              String
}